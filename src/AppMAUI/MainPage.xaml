<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_ProyectoAvance2.MainPage"
             BackgroundColor="{StaticResource White}">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- ENCABEZADO -->
        <Grid BackgroundColor="{StaticResource Primary}" Padding="20" Row="0">
            <Label Text="Rubia Divina"
                   TextColor="{StaticResource White}"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Grid>

        <!-- CUERPO -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="25">

                <!-- CARRUSEL -->
                <Label Text="Promos del día"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Primary}"
                       HorizontalOptions="Center" />

                <CarouselView HeightRequest="300"
                              IndicatorView="promoIndicators"
                              ItemsLayout="HorizontalList">
                    <CarouselView.ItemsSource>
                        <x:Array Type="{x:Type ImageSource}">
                            <ImageSource>promo1.jpg</ImageSource>
                            <ImageSource>promo2.jpg</ImageSource>
                            <ImageSource>promo3.jpg</ImageSource>
                        </x:Array>
                    </CarouselView.ItemsSource>
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Image Aspect="AspectFill" Source="{Binding}" />
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

                <!-- Indicadores -->
                <IndicatorView x:Name="promoIndicators"
                               HorizontalOptions="Center"
                               IndicatorColor="{StaticResource Gray200}"
                               SelectedIndicatorColor="{StaticResource Primary}" />

                <!-- BOTONES -->
                <Label Text="Elige una opción:"
                       HorizontalOptions="Center"
                       FontSize="16"
                       FontAttributes="Italic"
                       TextColor="{StaticResource Gray600}" />

                <VerticalStackLayout Spacing="10">
                    <Button Text="Botón 1" />
                    <Button Text="Botón 2" />
                    <Button Text="Botón 3" />
                    <Button Text="Botón 4" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
