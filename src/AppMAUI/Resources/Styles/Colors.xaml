<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base colors -->
    <Color x:Key="Primary">#042616</Color>
    <Color x:Key="Secondary">#074025</Color>
    <Color x:Key="Tertiary">#86A68E</Color>
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <!-- Grays -->
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#D6D6D6</Color>
    <Color x:Key="Gray400">#B0B0B0</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#7A7A7A</Color>
    <Color x:Key="Gray900">#1A1A1A</Color>
    <Color x:Key="Gray950">#0A0A0A</Color>

    <!-- Extra colors -->
    <Color x:Key="OffBlack">#111111</Color>
    <Color x:Key="Magenta">#FF00FF</Color>
    <Color x:Key="MidnightBlue">#191970</Color>
    <Color x:Key="SecondaryDarkText">#AFAFAF</Color>
    

    <!-- SolidColorBrushes (opcional) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}" />
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}" />
</ResourceDictionary>
