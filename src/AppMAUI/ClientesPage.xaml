<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_ProyectoAvance2.ClientesPage"
             Title="Clientes">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Formulario para agregar/editar cliente -->
        <Frame BorderColor="Gray" Padding="10" CornerRadius="8">
            <VerticalStackLayout Spacing="8">
                <Entry x:Name="NombreEntry" Placeholder="Nombre" />
                <Entry x:Name="ApellidoEntry" Placeholder="Apellido" />
                <Entry x:Name="TelefonoEntry" Placeholder="Teléfono" Keyboard="Telephone" />
                <Entry x:Name="CorreoEntry" Placeholder="Correo electrónico" Keyboard="Email" />
                <HorizontalStackLayout Spacing="10">
                    <Button x:Name="AgregarButton" Text="Agregar" Clicked="OnAgregarClicked" />
                    <Button x:Name="ActualizarButton" Text="Actualizar" Clicked="OnActualizarClicked" IsVisible="False" />
                    <Button x:Name="CancelarButton" Text="Cancelar" Clicked="OnCancelarClicked" IsVisible="False" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <Label Text="Lista de Clientes" FontAttributes="Bold" FontSize="Medium" />

        <!-- Lista de clientes -->
        <CollectionView x:Name="ClientesCollectionView" SelectionMode="Single" SelectionChanged="OnClienteSeleccionado">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Eliminar" BackgroundColor="Red" Invoked="OnEliminarClicked" />
                                <SwipeItem Text="Editar" BackgroundColor="Orange" Invoked="OnEditarClicked" />
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <VerticalStackLayout>
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                                <Label Text="{Binding Apellido}" />
                                <Label Text="{Binding Telefono}" FontSize="12" TextColor="Gray" />
                                <Label Text="{Binding Correo}" FontSize="12" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label x:Name="MensajeLabel" TextColor="Red" IsVisible="False" />

    </VerticalStackLayout>
</ContentPage>